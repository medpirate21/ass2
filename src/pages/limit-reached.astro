---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Daily Limit Reached">
  <div class="limit-page">
    <div class="limit-container">
      <div class="limit-icon">
        <svg width="80" height="80" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="12" cy="12" r="10"/>
          <path d="M15 9l-6 6"/>
          <path d="M9 9l6 6"/>
        </svg>
      </div>
      
      <div class="limit-content">
        <h1 class="limit-title">Daily Video Limit Reached</h1>
        <p class="limit-message">
          You've reached your daily video quota. Upgrade to a premium plan for unlimited access or wait until tomorrow for your quota to reset.
        </p>
        
        <div class="limit-actions">
          <button id="back-btn" class="action-btn secondary">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M19 12H5"/>
              <path d="M12 19l-7-7 7-7"/>
            </svg>
            Go Back
          </button>
          
          <button id="upgrade-btn" class="action-btn primary">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M13 2L3 14h9l-1 8 10-12h-9l1-8z"/>
            </svg>
            Upgrade Plan
          </button>
        </div>
      </div>
    </div>
  </div>
</Layout>

<style>
  .limit-page {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem 1rem;
  }

  .limit-container {
    background: var(--glass-bg);
    backdrop-filter: var(--glass-backdrop-filter);
    -webkit-backdrop-filter: var(--glass-backdrop-filter);
    border-radius: var(--glass-border-radius);
    border: var(--glass-border);
    box-shadow: var(--glass-shadow-active);
    padding: 3rem 2rem;
    max-width: 500px;
    width: 100%;
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .limit-icon {
    margin-bottom: 2rem;
    color: #e74c3c;
  }

  .limit-title {
    font-size: 2rem;
    font-weight: 700;
    background: var(--glass-gradient-text);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 1rem;
    text-shadow: 0 0 20px rgba(231, 76, 60, 0.3);
  }

  .limit-message {
    font-size: 1.1rem;
    color: var(--glass-text);
    line-height: 1.6;
    margin-bottom: 2.5rem;
    opacity: 0.9;
  }

  .limit-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
  }

  .action-btn {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem 1.5rem;
    border: none;
    border-radius: var(--glass-border-radius-small);
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    text-decoration: none;
    position: relative;
    overflow: hidden;
  }

  .action-btn::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: var(--glass-shimmer);
    transition: left 0.5s ease;
    z-index: 0;
  }

  .action-btn:hover::before {
    left: 100%;
  }

  .action-btn > * {
    position: relative;
    z-index: 1;
  }

  .action-btn.primary {
    background: var(--glass-gradient-primary);
    color: white;
    border: var(--glass-border);
    box-shadow: var(--glass-shadow-button-active);
  }

  .action-btn.primary:hover {
    transform: translateY(-2px);
    box-shadow: var(--glass-shadow-hover);
  }

  .action-btn.secondary {
    background: var(--glass-bg-secondary);
    backdrop-filter: var(--glass-backdrop-filter);
    -webkit-backdrop-filter: var(--glass-backdrop-filter);
    color: var(--glass-text);
    border: var(--glass-border);
  }

  .action-btn.secondary:hover {
    background: var(--glass-bg-hover);
    transform: translateY(-2px);
    box-shadow: var(--glass-shadow-button);
  }

  @media (max-width: 768px) {
    .limit-container {
      padding: 2rem 1.5rem;
    }
    
    .limit-title {
      font-size: 1.6rem;
    }
    
    .limit-actions {
      flex-direction: column;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const backBtn = document.getElementById('back-btn');
    const upgradeBtn = document.getElementById('upgrade-btn');

    backBtn?.addEventListener('click', () => {
      window.history.back();
    });

    upgradeBtn?.addEventListener('click', () => {
      window.location.href = '/account';
    });
  });
</script>
