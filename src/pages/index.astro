---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Medoracle Academia">
  <div class="container">
    <!-- Checking overlay -->
    <div class="checking-overlay" id="checking-overlay">
      <div class="checking-content">
        <div class="spinner"></div>
        <h2>Checking Details...</h2>
        <p>Verifying platform and user information</p>
      </div>
    </div>
    
    <!-- Main content (hidden until login success) -->
    <div class="content hidden" id="main-content">
      <div class="card">
        <h2>Welcome Medicos</h2>
        <p>Discover a world of knowledge and innovation at Medoracle Academia.</p>
      </div>
    </div>
  </div>
</Layout>

<script>
  document.addEventListener("astro:page-load", () => {
    // Auth manager connects Layout + LoginModal to the page UI
    (window as any).authManager = {
      onLogin: () => {
        console.log("✅ User logged in");
        const checkingEl = document.getElementById("checking-overlay");
        const mainEl = document.getElementById("main-content");
        if (checkingEl) checkingEl.style.display = "none";
        if (mainEl) mainEl.classList.remove("hidden");
      },
      onLogout: () => {
        console.log("⚠️ User logged out");
        localStorage.removeItem("medoracle_user");
        // Reopen modal for login
        if ((window as any).loginModal) {
          (window as any).loginModal.show();
        }
      }
    };
  });
</script>

<style>
  .container {
    text-align: center;
    color: white;
    padding: 2rem 0;
    min-height: 80vh;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .checking-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.9);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1000;
  }

  .checking-content {
    text-align: center;
    color: white;
    padding: 2rem;
  }

  .spinner {
    width: 50px;
    height: 50px;
    border: 4px solid rgba(255, 255, 255, 0.3);
    border-top: 4px solid #4f3bc4;
    border-radius: 50%;
    animation: spin 1s linear infinite;
    margin: 0 auto 1rem;
  }

  @keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
  }

  .checking-content h2 {
    margin: 1rem 0;
    font-size: 1.8rem;
  }

  .checking-content p {
    opacity: 0.8;
    margin-bottom: 1rem;
  }

  .content.hidden {
    display: none;
  }

  .card {
    background: rgba(255, 255, 255, 0.1);
    padding: 2rem;
    border-radius: 1rem;
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    transition: transform 0.3s ease;
  }

  .card:hover {
    transform: translateY(-5px);
  }

  .card h2 {
    margin-top: 0;
    font-size: 2rem;
  }

  .card p {
    line-height: 1.6;
    opacity: 0.9;
  }
</style>
